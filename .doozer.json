        "texinfo",
        "libncurses5-dev",
        "libz-dev",
        "python-dev",
        "libssl-dev",
        "libgmp3-dev",
        "ccache",
        "zip",
        "curl",
        "wget",
        "squashfs-tools",
        "whois",
